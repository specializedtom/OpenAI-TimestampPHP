{
    "name": "yourusername/php-opentimestamps",
    "description": "PHP OpenTimestamps client with full CLI, SPV verification, batch and detached timestamp support",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "guzzlehttp/guzzle": "^8.0",
        "symfony/console": "7.4.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "OpenTimestamps\\": "src/"
        }
    },
    "bin": [
        "bin/ots"
    ],
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "ots": {
            "pools-file": "default_pools.json"
        }
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "config": {
	"vendor-dir": "vendor"
    }
}

